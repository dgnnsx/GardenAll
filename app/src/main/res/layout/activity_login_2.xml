<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:screenOrientation="portrait"
    android:background="@color/bg_screen1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@mipmap/logotipo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo"/>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_below="@id/logo"
            android:theme="@style/MyEditTextTheme"/>

        <EditText
            android:id="@+id/input_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_below="@id/input_email"
            android:padding="10dp"
            android:singleLine="true"
            android:theme="@style/MyEditTextTheme"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="24dp"
            android:layout_below="@id/input_password"
            android:padding="12dp"
            android:text="Login"
            android:background="@color/abobora"
            android:textColor="@color/white"
            />

        <TextView android:id="@+id/link_lost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Esqueceu sua senha?"
            android:layout_below="@id/btn_login"
            android:gravity="center"
            android:textSize="16dip" />

        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/btn_fb_login"
            android:background="@mipmap/facebook"
            android:scaleType="fitXY"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:layout_below="@id/link_lost"/>

        <TextView android:id="@+id/link_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="50dp"
            android:text="Cadastre-se"
            android:layout_below="@id/btn_fb_login"
            android:gravity="center"
            android:textColor="@color/pi"
            android:textSize="18dip"/>
    </RelativeLayout>

</ScrollView>